# This file lists every setting the client may need to adjust.
# Copy the backend block to a new ".env" file in the project root.
# Copy the frontend block to "frontend/.env.local".

# ---- Backend (.env) ----
DJANGO_SECRET_KEY=replace-this-with-a-long-random-string
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost
DJANGO_CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Database engine: sqlite, postgres, mysql
DJANGO_DB_ENGINE=sqlite
# For sqlite set the filename. For other engines set the usual NAME/USER/PASSWORD/HOST/PORT keys.
DJANGO_SQLITE_NAME=db.sqlite3

# Email delivery. Leave the SMTP fields blank to keep console email while testing.
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
DEFAULT_FROM_EMAIL=AI Use Declaration <no-reply@example.com>

# Password reset link that the email sends users to.
PASSWORD_RESET_URL=http://localhost:5173/reset-password
PASSWORD_RESET_TOKEN_EXPIRY_MINUTES=30


# ---- Frontend (frontend/.env.local) ----
VITE_APP_NAME=AI Use Declaration
VITE_APP_ENV=development
VITE_API_BASE=http://127.0.0.1:8000
# Optional separate auth base, leave empty to reuse API base.
VITE_AUTH_BASE=
VITE_PUBLIC_BASE=/
VITE_ROUTER_BASE=/
VITE_WS_URL=
VITE_FEATURE_EXPORT=true
# Comma separated list that drives the assignment type picker.
VITE_ASSIGNMENT_TYPES=Project,Essay,Quiz,Reflection,Lab
# Local dev server settings.
VITE_DEV_PORT=5174
